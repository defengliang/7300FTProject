<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://priceTblListView.title"
      focusComponent="priceTblsDataGrid">
    <data>
        <collection id="priceTblsDc"
                    class="hk.edu.hkbu.ftproject.entity.PriceTbl">
            <fetchPlan extends="_base">
                <property name="id" fetchPlan="_instance_name"/>
                <property name="classifier" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="priceTblsDl" readOnly="true">
                <query>
                    <![CDATA[select e from ftp_PriceTbl e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="priceTblsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="priceTblsDataGrid.create"/>
            <button id="editBtn" action="priceTblsDataGrid.edit"/>
            <button id="removeBtn" action="priceTblsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="priceTblsDl"/>
        </hbox>
        <dataGrid id="priceTblsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="priceTblsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="classifier"/>
                <column property="close"/>
                <column property="createTime"/>
                <column property="high"/>
                <column property="low"/>
                <column property="open"/>
                <column property="updateTime"/>
                <column property="volume"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
