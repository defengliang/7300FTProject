<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://companyFileListView.title"
      focusComponent="companyFilesDataGrid">
    <data>
        <collection id="companyFilesDc"
                    class="hk.edu.hkbu.ftproject.entity.CompanyFile">
            <fetchPlan extends="_base"/>
            <loader id="companyFilesDl" readOnly="true">
                <query>
                    <![CDATA[select e from ftp_CompanyFile e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="companyFilesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="companyFilesDataGrid.create"/>
            <button id="editBtn" action="companyFilesDataGrid.edit"/>
            <simplePagination id="pagination" dataLoader="companyFilesDl"/>
        </hbox>
        <dataGrid id="companyFilesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="companyFilesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
            </actions>
            <columns resizable="true">
                <column property="symbol"/>
                <column property="filePath" visible="false"/>
                <column property="fileName" visible="false"/>
                <column property="status"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
